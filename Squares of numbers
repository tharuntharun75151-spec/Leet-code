class Solution:
    def mySqrt(self, x: int) -> int:
       
        if x == 0 or x == 1:
            return x
        
        left, right = 1, x
        result = 0
        
        while left <= right:
            mid = left + (right - left) // 2
            square = mid * mid
            
            if square == x:
                return mid
            elif square < x:
                result = mid  # Potential answer
                left = mid + 1
            else:
                right = mid - 1
        
        return result
