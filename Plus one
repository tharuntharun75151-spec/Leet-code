class Solution:
    def plusOne(self, digits: List[int]) -> List[int]:
        n = len(digits)
    
    # Start from the last digit and move backwards
        for i in range(n - 1, -1, -1):
            if digits[i] < 9:
                digits[i] += 1
                return digits
            else:
                digits[i] = 0
        
        # If we're here, it means all digits were 9 (e.g., 999 -> 1000)
        return [1] + digits
